                {
                    "id": "flatpak",
                    "title": "Flatpak",
                    "subtitle": "Manage and configure Flatpaks and the Flathub repository.",
                    "default": true
                },
                {
                    "id": "appimage",
                    "title": "AppImage",
                    "subtitle": "Install necessary dependencies to run AppImages.",
                    "default": true
